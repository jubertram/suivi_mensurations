<h2><%= @phase.phase_type.capitalize %></h2>


<%= link_to 'modifier', edit_phase_path(@phase) %> -
<%= link_to 'supprimer',
  phase_path,
  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
%>

<br><br>

<% if @phase.measurements != [] %>
<% x = 1 %>
  <ul>
    <% @sorted_measurements.each_with_index do |m, i| %>
      <li>
        <h3><%= m.date %></h3>
        <% if m.weight != nil  %>
          poids: <%= m.weight %>kg  <%= progress(m.weight, @sorted_measurements[ x ].weight, i, @phase)%><br>
        <% end %>

        <% if m.bras != nil  %>
          biceps: <%= m.bras %>cm  <%= progress(m.bras, @sorted_measurements[ x ].bras, i, @phase) %><br>
        <% end %>

        <% if m.poitrine != nil  %>
          poitrine: <%= m.poitrine %>cm  <%= progress(m.poitrine, @sorted_measurements[ x ].poitrine, i, @phase) %><br>
        <% end %>

        <% if m.taille != nil  %>
          taille: <%= m.taille %>cm  <%= progress(m.taille, @sorted_measurements[ x ].taille, i, @phase) %><br>
        <% end %>

        <% if m.hanches != nil  %>
          hanches: <%= m.hanches %>cm  <%= progress(m.hanches, @sorted_measurements[ x ].hanches, i, @phase) %><br>
        <% end %>

        <% if m.cuisses != nil  %>
          cuisses: <%= m.cuisses %>cm  <%= progress(m.cuisses, @sorted_measurements[ x ].cuisses, i, @phase) %><br>
        <% end %>

        <% if m.epaules != nil  %>
          epaules: <%= m.epaules %>cm  <%= progress(m.epaules, @sorted_measurements[ x ].epaules, i, @phase) %><br>
        <% end %>

        <% if m.mollets != nil  %>
          mollets: <%= m.mollets %>cm  <%= progress(m.mollets, @sorted_measurements[ x ].mollets, i, @phase) %><br>
        <% end %>

        <% if m.glucides != nil  %>
          glucides: <%= m.glucides %>g  <%= progress(m.glucides, @sorted_measurements[ x ].glucides, i, @phase) %><br>
        <% end %>

        <%= link_to 'edit', edit_measurement_path(m) %> -

        <%= link_to 'supprimer', measurement_path,
          data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
        %>
      </li>
        <% x += 1 if x < i %>
    <% end %>
  </ul>
<% else %>
    <%= link_to 'Ajoute tes premieres mensurations', new_phase_measurement_path(@phase) %>
<% end %>


<%= link_to 'retour', phases_path(@phase) %>
